@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    .custom{
        margin-left: 260px; 
        padding: 20px;
         width: calc(100% - 260px); 
    overflow-x: hidden;
        
    }
</style>

<div class="custom container text-light">
    @{
        if (TempData["Message"] != null)
        {
                <div class="alert alert-success">
                @TempData["Message"]
                </div>
        }
    }
    <h1 class="fw-bold my-5">Add New Content</h1>

    <form action="/Content/SaveContent" method="post">
        <div class="mb-3">
            <label for="name" class="form-label fw-semibold">Name: </label>
            <input type="text" class="form-control w-25" id="name" name="contentName" required>
        </div>
        <div class="mb-5">
            <label for="description" class="form-label fw-semibold">Plot Summary:</label>
            <textarea class="form-control" style="max-width: 100%;" row="3" column="7" id="description" name="contentDescription" required></textarea>
        </div>
        <hr> 
        <div class="mb-5">

            <div class="mb-4">
                <label class="mb-1 fw-semibold">Select the content Type</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="contentType" id="movie" value="movie" checked>
                    <label class="form-check-label" for="movie">
                        Movie
                    </label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="contentType" id="show" value="show">
                    <label class="form-check-label" for="show">
                        Show(Tv shows / dramas / series)
                    </label>
                </div>
            </div>
            <div class="row col-auto">
                <div class="mb-3">
                    <label for="ReleaseYear" class="form-label fw-semibold">Release Year</label>
                    <input type="number" class="form-control w-25" min="1920" max="2025" name="contentReleaseYear" required>
                </div>
                <div class="mb-2">
                    <label for="Genre" class="form-label fw-semibold">Genre</label>
                    <select class="form-select w-25" id="Genre" name="contentGenre" required>
                        <option disabled>Select</option>
                        <option value="Action">Action</option>
                        <option value="Adventure">Adventure</option>
                        <option value="Crime">Crime</option>
                        <option value="Family">Family</option>
                        <option value="Fantasy">Fantasy</option>
                        <option value="Historical">Historical</option>
                        <option value="Documentary">Documentary</option>
                        <option value="Horror">Horror</option>
                        <option value="Science Fiction">Science Fiction</option>
                        <option value="Romance">Romance</option>
                        <option value="Drama">Drama</option>
                        <option value="Thriller">Thriller</option>
                        <option value="Mystery">Mystery</option>
                        <option value="Musical">Musical</option>
                        <option value="Animation">Animation</option>
                        <option value="Biography">Biography</option>
                        <option value="War">War</option>
                        <option value="Sport">Sport</option>
                        <option value="Superhero">Superhero</option>
                        <option value="Short">Short</option>
                        <option value="Political">Political</option>
                    </select>
                </div>


            </div>

        </div>
        <hr>
        <div class="mb-4">
            <label for="name" class="form-label fw-semibold">Trailer Link </label>
            <input type="text" class="form-control  w-50" id="trailer" name="contentTrailer" required>
        </div>

        <div class="mb-5">
            <label for="name" class="form-label fw-semibold">Image Link </label>
            <input type="text" class="form-control  w-50" id="image" name="contentPoster" required>
        </div>


        <hr>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success w-50 my-5">Add</button>
        </div>
    </form>
</div>
